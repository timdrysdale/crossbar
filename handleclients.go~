package main

import "sync"

func HandleClients(closed <-chan struct{}, wg *sync.WaitGroup, chanClientActions chan<- clientActions) {
	defer wg.Done()

	var clients = make(map[string]chan message)

	for {
		select {
		case <-closed:
			return
		case request := <-chanClientActions:
			if request.action == clientAdd {
				//add client, create new topic if need be
			} else if request.action == ClientDelete {
				//remove client, delete topic if no users
			}
		}
	}
}
