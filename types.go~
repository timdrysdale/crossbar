package main

import "nhooyr.io/websocket"

//messages will be wrapped in this struct for muxing
type message struct {
	typ  websocket.MessageType
	data []byte
}

// requests to add or delete subscribers are represented by this struct
type userAction struct {
	action       userActionType
	name         string
	topic        string
	chanMessages chan message //ignored for userDelete
}

// userActionType represents the type of of action requested
type userActionType int

// userActionType constants
const (
	userAdd userActionType = iota
	userDelete
)
